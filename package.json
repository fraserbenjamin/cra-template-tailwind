{
  "name": "cra-template-tailwind",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Fraser Benjamin",
  "main": "template.json",
  "engines": {
    "node": ">=10"
  },
  "description": "A quick start Create React App template with Tailwind CSS",
  "home": ".",
  "private": true,
  "keywords": [
    "react", 
    "create-react-app",
    "cra-template",
    "template",
    "tailwind"
  ],
  "files": [
    "template",
    "template.json"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.1"
  },
  "scripts": {
    "build:css": "postcss src/assets/tailwind.css -o src/assets/styles.css",
    "watch:css": "postcss src/assets/tailwind.css -o src/assets/styles.css",
    "start": "npm run watch:css & react-scripts start",
    "build": "npm run build:css react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "clean-files": "rm -rf ./template/public ./template/src",
    "copy-files": "cp -a ./src/. template/src && cp -a ./public/. template/public && cp babel.plugin.js template/ && cp postcss.config.js template/",
    "prepublishOnly": "npm clean-files && npm copy-files"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest",
    "access": "public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.4",
    "babel-plugin-macros": "^2.8.0",
    "postcss-cli": "^7.1.1",
    "tailwindcss": "^1.4.6",
    "twin.macro": "^1.5.0"
  }
}
